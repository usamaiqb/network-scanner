# Auto detect text files and perform LF normalization
* text=auto

# Explicitly declare text files
*.java text
*.kt text
*.kts text
*.xml text
*.properties text
*.md text
*.txt text
*.json text
*.gradle text

# Declare files that will always have CRLF line endings on checkout
*.bat text eol=crlf

# Declare files that will always have LF line endings on checkout
*.sh text eol=lf
gradlew text eol=lf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
*.eot binary
*.jar binary
*.aar binary
*.apk binary
*.aab binary
*.dex binary
*.so binary
*.jks binary
*.keystore binary

# Kotlin script files
*.kts text diff=kotlin

# Gradle wrapper
gradle/wrapper/gradle-wrapper.jar binary
